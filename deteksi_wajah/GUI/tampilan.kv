#:kivy 2.0.0
#:import Screen kivy.uix.screenmanager.Screen
#:import ScreenManager kivy.uix.screenmanager.ScreenManager


ScreenManager:
    id: screen_manager
    Screen:
        name: 'splash'
        size: "800dp", "480dp"
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Image:
                source: 'logo/download.png'  # Ganti dengan gambar splash screen Anda
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: '100dp'
            
            Image:
                source: 'logo/download (1).png'  # Ganti dengan gambar splash screen Anda
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: '100dp'
            
            Image:
                source: 'logo/telyu_horizon.jpg'  # Ganti dengan gambar splash screen Anda
                size_hint_y: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                height: '100dp'

    Screen:
        name: 'main'
        size: "800dp", "480dp"
        MDBoxLayout:
            orientation: 'vertical'
            MDCard:
                size_hint: 1, 2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                md_bg_color: 0.2, 0.4, 0.6, 1  # Warna latar belakang dalam format RGBA
                radius: [10, 10, 10, 10]  # Atur sudut (radius) sesuai keinginan Anda
                BoxLayout:
                    orientation: 'vertical'
                    padding: "8dp"
                    Label:
                        text: "Ini adalah Card"
                        size_hint_y: None
                        height: "30dp"
            MDBoxLayout:
                orientation: 'horizontal'
                MDBoxLayout:
                    orientation:'horizontal'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.5}
                    Image:
                        source: 'logo/download.png'  # Ganti dengan gambar splash screen Anda
                        size_hint_y: None
                        size_hint_x: None
                        pos_hint: {'center_x': 0.1, 'center_y': 0.2}
                        height: '50dp'
                    
                    Image:
                        source: 'logo/download (1).png'  # Ganti dengan gambar splash screen Anda
                        size_hint_y: None
                        size_hint_x: None
                        pos_hint: {'center_x': 0.1, 'center_y': 0.2}
                        height: '50dp'
                    
                    Image:
                        source: 'logo/telyu_horizon.jpg'  # Ganti dengan gambar splash screen Anda
                        size_hint_y: None
                        size_hint_x: None
                        pos_hint: {'center_x': 0.1, 'center_y': 0.2}
                        height: '50dp'


    Screen:
        name: 'pose_estimation'
        size: "800dp", "480dp"
        BoxLayout:
            orientation: 'vertical'

            MDCard:
                size_hint: None, None
                size: "300dp", "200dp"
                pos_hint: {'center_x': 0.5}
                elevation: 10

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "20dp"

                    MDLabel:
                        text: "Welcome to GitHub Desktop"
                        halign: 'center'
                        font_size: "20sp"

                    MDRaisedButton:
                        text: "Sign In"
                        size_hint: None, None
                        size: "200dp", "40dp"
                        pos_hint: {'center_x': 0.5}

                    MDRaisedButton:
                        text: "Create an Account"
                        size_hint: None, None
                        size: "200dp", "40dp"
                        pos_hint: {'center_x': 0.5}  # Ganti dengan fungsi login yang sesuai

